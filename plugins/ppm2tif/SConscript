Import('env')
Import('pixelsave')
ppm2tif_sources=Split("""
	ppm2tif.c""")

if 'darwin' == env['PLATFORM']:
	ppm2tif_libs = ['tiff', 'z']

if 'win32' == env['PLATFORM']:
	ppm2tif_libs = ['libtiff', 'libz', 'ws2_32']

ppm2tif = env.SharedLibrary('ppm2tif', ppm2tif_sources + pixelsave, LIBS=ppm2tif_libs)

env.Install('$BINDIR', ppm2tif)
