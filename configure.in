AC_INIT()
AM_INIT_AUTOMAKE(aqsis,0.5.4001)
AC_PREFIX_DEFAULT(/usr/local/aqsis)

AC_DEFINE(STRNAME,"Aqsis")

AC_ARG_ENABLE(debug,
[  --enable-debug          compile with debugging [default=no]],
[case "${enableval}" in
  true) debug=true ;;
  false) debug=false ;;
  yes) debug=true ;;
  no)  debug=false ;;
  *) AC_MSG_ERROR(bad value ${enableval} for --enable-debug) ;;
esac],
[debug=false])
AM_CONDITIONAL(DEBUG, test x$debug = xtrue)

AC_PROG_CXX
AM_DISABLE_SHARED
AM_PROG_LIBTOOL
AM_PROG_LEX
AC_PROG_YACC
AC_EXEEXT

dnl OpenGL
dnl HAVE_OPENGL
HAVE_GLUT

dnl Needed by librib2/bdec.cpp. Define WORDS_BIGENDIAN.
AC_C_BIGENDIAN

